{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "walletAddress": {
        "type": "string"
      },
      "message": {
        "type": "string"
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "coerce": true
      }
    },
    "required": ["_id", "walletAddress", "message", "timestamp"],
    "additionalProperties": false
  }
} 