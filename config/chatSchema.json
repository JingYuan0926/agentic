{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chat Messages",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "role": {
        "type": "string",
        "enum": ["user", "assistant", "system"]
      },
      "content": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      },
      "timestamp": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": ["_id", "role", "content", "timestamp"]
  }
} 